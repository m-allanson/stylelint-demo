{
  "private": true,
  "name": "stylelint-demo",
  "version": "0.0.1",
  "description": "Demo stylelint",
  "repository": "https://github.com/stylelint/stylelint-demo.git",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "prettier:check": "prettier '**/*.js' --list-different",
    "prettier:fix": "prettier '**/*.js' --write",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:css": "stylelint src/common/**/*.css",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "test": "npm run tape",
    "posttest": "npm run bundle",
    "tape": "tape --require babel-core/register \"src/**/__tests__/**/*.js\"",
    "prebundle": "rimraf dist",
    "bundle": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "heroku-postbuild": "npm run bundle",
    "start": "NODE_ENV=production node index.js",
    "start:dev": "NODE_ENV=development nodemon --ignore src/common/ index.js"
  },
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.11.0",
    "body-parser": "^1.15.2",
    "brace": "^0.11.0",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "css-loader": "^0.28.0",
    "express": "^4.12.4",
    "html-webpack-plugin": "^3.2.0",
    "lodash.debounce": "^4.0.6",
    "morgan": "^1.7.0",
    "postcss-loader": "^3.0.0",
    "postcss-nesting": "^5.0.0",
    "react": "^16.5.1",
    "react-ace": "^6.0.0",
    "react-css-modules": "^4.1.0",
    "react-dom": "^16.5.1",
    "rimraf": "^2.5.3",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.20.0",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.1.0",
    "webpack": "^4.5.0",
    "whatwg-fetch": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^5.0.0",
    "eslint-config-stylelint": "^8.2.0",
    "eslint-plugin-react": "^7.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.9.2",
    "npm-run-all": "^4.0.0",
    "prettier": "^1.9.2",
    "stylelint-order": "^1.0.0",
    "supertest": "^3.0.0",
    "tape": "^4.6.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-hot-middleware": "^2.12.0"
  },
  "engines": {
    "node": "10"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": [
      "stylelint",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ]
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-order"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "at-rule-whitelist": [
        "import",
        "media"
      ],
      "color-named": "always-where-possible",
      "color-no-hex": true,
      "custom-media-pattern": "^([a-z]+-?)*([a-z]+)$",
      "custom-property-pattern": "^([a-z]+-?)*([a-z]+)$",
      "declaration-block-no-duplicate-properties": true,
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "numeric",
      "function-url-quotes": "always",
      "function-whitelist": [
        "color"
      ],
      "media-feature-name-no-vendor-prefix": true,
      "no-descending-specificity": true,
      "no-duplicate-selectors": true,
      "order/properties-alphabetical-order": true,
      "property-blacklist": [
        "float"
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "selector-class-pattern": "^([a-z]+[a-zA-Z]*|ng-[a-z]+(-[a-z]+)*)$",
      "selector-max-attribute": 0,
      "selector-max-specificity": "0,4,0",
      "selector-max-type": 0,
      "selector-max-universal": 0,
      "selector-no-vendor-prefix": true,
      "selector-pseudo-class-whitelist": [
        "hover",
        "focus"
      ],
      "string-quotes": "double",
      "unit-whitelist": [
        "%",
        "px",
        "em",
        "vh"
      ],
      "value-no-vendor-prefix": true
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "MIT"
}
