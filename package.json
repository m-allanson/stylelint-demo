{
  "private": true,
  "name": "stylelint-demo",
  "version": "0.0.1",
  "description": "Demo stylelint",
  "license": "MIT",
  "repository": "https://github.com/stylelint/stylelint-demo.git",
  "main": "index.js",
  "scripts": {
    "prettier:check": "prettier '**/*.js' --list-different",
    "prettier:fix": "prettier '**/*.js' --write",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:css": "stylelint src/common/**/*.css",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "test": "jest",
    "posttest": "npm run bundle",
    "prebundle": "rimraf dist",
    "bundle": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "heroku-postbuild": "npm run bundle",
    "start": "NODE_ENV=production node index.js",
    "start:dev": "NODE_ENV=development nodemon --ignore src/common/ index.js"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "css-loader": "^3.4.2",
    "express": "^4.17.1",
    "html-webpack-plugin": "^3.2.0",
    "lz-string": "^1.4.4",
    "morgan": "^1.9.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prismjs": "^1.19.0",
    "react": "^16.13.0",
    "react-css-modules": "^4.7.11",
    "react-dom": "^16.13.0",
    "react-simple-code-editor": "0.11.0",
    "rimraf": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "style-loader": "^1.1.3",
    "stylelint": "^13.3.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "use-debounce": "^3.4.1",
    "webpack": "^4.42.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "~6.8.0",
    "eslint-config-stylelint": "~11.1.0",
    "eslint-plugin-react": "~7.19.0",
    "eslint-plugin-react-hooks": "~2.5.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "~1.19.1",
    "stylelint-order": "^4.0.0",
    "supertest": "^4.0.2",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "engines": {
    "node": "10"
  },
  "browserslist": [
    "defaults"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "postcss": {
    "map": true,
    "plugins": {
      "postcss-preset-env": {
        "features": {
          "nesting-rules": true
        }
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "stylelint",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "16.5"
      }
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-order"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-vendor-prefix": true,
      "at-rule-whitelist": [
        "import",
        "media"
      ],
      "color-named": "always-where-possible",
      "custom-media-pattern": "^([a-z]+-?)*([a-z]+)$",
      "custom-property-pattern": "^([a-z]+-?)*([a-z]+)$",
      "declaration-block-no-duplicate-properties": true,
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "numeric",
      "function-url-quotes": "always",
      "function-whitelist": [
        "color",
        "counter",
        "hsla",
        "linear-gradient"
      ],
      "media-feature-name-no-vendor-prefix": true,
      "no-descending-specificity": true,
      "no-duplicate-selectors": true,
      "order/properties-alphabetical-order": true,
      "property-blacklist": [
        "float"
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "selector-class-pattern": "^([a-z]+[a-zA-Z]*|ng-[a-z]+(-[a-z]+)*)$",
      "selector-max-attribute": 0,
      "selector-max-specificity": "0,4,0",
      "selector-max-type": 0,
      "selector-max-universal": 0,
      "selector-no-vendor-prefix": true,
      "selector-pseudo-class-whitelist": [
        "hover",
        "focus",
        "global"
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "string-quotes": "double",
      "unit-whitelist": [
        "%",
        "px",
        "em",
        "vh"
      ],
      "value-no-vendor-prefix": true
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
